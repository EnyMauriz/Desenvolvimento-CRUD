import java.sql.*;

// Classe comentada por: Ana Eduarda Raposo Medeiros
public class ConexaoBanco { // Classe para conectar com o banco de dados
        private static final String URL = ""; // constante que guarda a URL do usuário
        private static final String USUARIO = ""; // constante que guarda o usuário
        private static final String SENHA = ""; // constante que guarda a senha
        public static Connection obterConexao() throws SQLException{ // método para conectar usando a biblioteca java
            return DriverManager.getConnection(URL, USUARIO, SENHA); // retorna a conexão
        }
    }
